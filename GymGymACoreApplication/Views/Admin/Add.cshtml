@using Entities.Concrete;
@model Admin
@{
	ViewData["Title"] = "Add";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-2">
	<br />
    <br />
	<h3 style="text-align:center;">Add Admin Panel</h3>
	<br />
	@using (Html.BeginForm("Add", "Admin", FormMethod.Post, new { @class = "form-group" }))
	{
		@Html.Label("Admin Full Name")
		@Html.TextBoxFor(admin=>admin.AdminName,new { @class = "form-control" })
		@Html.ValidationMessageFor(admin=>admin.AdminName,"",new { @class ="text-danger" })
				<br />
		@Html.Label("Admin Password")
		@Html.TextBoxFor(admin=>admin.AdminPassword,new { @class = "form-control" })
		@Html.ValidationMessageFor(admin=>admin.AdminPassword,"",new { @class ="text-danger" })
				<br />
		@Html.Label("Mail")
		@Html.TextBoxFor(admin=>admin.Mail,new { @class = "form-control" })
		@Html.ValidationMessageFor(admin=>admin.Mail,"",new { @class ="text-danger" })
				<br />
		@Html.Label("Admin Type")

						<select class="form-control" name="adminType">
									<option disabled selected>--Choose Title--</option>
									<option value="Boss">Boss</option>
									<option value="GeneralManager">General Manager</option>
									<option value="Shareholder">Shareholder</option>
									<option value="Manager">Manager</option>
									<option value="AssistantManager">Assistant Manager</option>
									<option value="Accountant">Accountant</option>
						</select>
		@Html.ValidationMessageFor(admin=>admin.AdminType,"",new { @class ="text-danger" })
				<br />
					<select class="form-control invisible" name="Deleted">
					<option value="False"></option>
					<option value="True">Deleted</option>
				</select>
					<input class="button-change form-control btn btn-primary" type="submit" value="Add Admin" />
	}
</div>


