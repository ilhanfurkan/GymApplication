@using Entities.Concrete;
@model List<User>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>User Login</th>
            <th>User Password</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Date Of Birth</th>
            <th>National ID</th>
            <th>Height</th>
            <th>Weight</th>
            <th>Phone Number</th>
            <th>Mail</th>
            <th>Deleted</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.UserLogin</td>
                    <td>@item.UserPassword</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Gender</td>
                    <td>@item.DateOfBirth</td>
                    <td>@item.NationalId</td>
                    <td>@item.Height</td>
                    <td>@item.Weight</td>
                    <td>@item.PhoneNo</td>
                    <td>@item.Mail</td>
                    <td>@item.Deleted</td>
                    <td>
                        <button type="button" class="btn btn-danger  text-center" data-bs-whatever="@item.UserId" data-bs-toggle="modal" data-bs-target="#decisionPopup">Delete</button>
                    </td>
                    <td><a href="/User/update/@item.UserId" type="button" class="btn btn-primary p-2">Update</a></td>
                </tr>
        }

    </tbody>
</table>
<div class="text-center d-flex justify-content-start p-2">
    <a href="/User/add" class="btn btn-info">Add New User</a>
</div>
