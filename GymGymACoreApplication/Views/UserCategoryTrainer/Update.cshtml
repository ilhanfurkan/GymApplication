@using Entities
@model UserCategoryTrainer
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-2">
    <h3 style="text-align:center;">Update Records</h3>

    @using (Html.BeginForm("Update", "userCategoryTrainer", FormMethod.Post, new { @class = "form-group" }))
    {
        @Html.TextBoxFor(userCategoryTrainer=>userCategoryTrainer.RegistrationId,new { @class = "form-control",@name="userCategoryTrainerId",@value="@Model.userCategoryTrainerId"})
        @Html.Label("Date Of Registration ")
        @Html.TextBoxFor(userCategoryTrainer=>userCategoryTrainer.DateOfRegistration,new { @class = "form-control" })
        @Html.ValidationMessageFor(userCategoryTrainer=>userCategoryTrainer.DateOfRegistration,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Payment")
        @Html.TextBoxFor(userCategoryTrainer=>userCategoryTrainer.PaymentType ,new { @class = "form-control" })
        @Html.ValidationMessageFor(userCategoryTrainer=>userCategoryTrainer.PaymentType,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Price")
        @Html.TextBoxFor(userCategoryTrainer=>userCategoryTrainer.Price ,new { @class = "form-control" })
        @Html.ValidationMessageFor(userCategoryTrainer=>userCategoryTrainer.Price,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Case")
            <select class="form-control" name="deleted">
            @if (Model.Deleted)
            {
                    <option selected>True</option>
                    <option>False</option>
            }
            else
            {
                    <option>True</option>
                    <option selected>False</option>
            }
        </select>
        <br />
        @Html.Label("User ID")
        @Html.TextBoxFor(userCategoryTrainer=>userCategoryTrainer.UserId ,new { @class = "form-control" })
        @Html.ValidationMessageFor(userCategoryTrainer=>userCategoryTrainer.UserId,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Packet ID")
        @Html.TextBoxFor(userCategoryTrainer=>userCategoryTrainer.PacketId ,new { @class = "form-control" })
        @Html.ValidationMessageFor(userCategoryTrainer=>userCategoryTrainer.PacketId,"",new { @class ="text-danger" })
        <br />



        <input class="form-control btn btn-primary" type="submit" value="Update Trainer" />
    }
</div>


