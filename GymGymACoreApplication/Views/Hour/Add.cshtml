@using Entities.Concrete;
@model Hour;
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-2">
    <br />
    <br />
    <h3 style="text-align:center;">Add Hour</h3>
    <br />
    @using (Html.BeginForm("add", "Hour", FormMethod.Post, new { @class = "form-group" }))
    {
        @Html.Label("Hours")
        @Html.TextBoxFor(hour=>hour.Hours,new { @class = "form-control " })
        @Html.ValidationMessageFor(hour=>hour.Hours,"",new { @class =" text-danger" })
        <br />
          @Html.Label("Time(Minute)")
        @Html.TextBoxFor(hour=>hour.Time,new { @class = "form-control" })
        @Html.ValidationMessageFor(hour=>hour.Time,"",new { @class ="text-danger" })
        <br />
        <select class="form-control invisible" name="Deleted">
            <option value="False"></option>
            <option value="True">Deleted</option>
        </select>
        <input class="button-change form-control btn btn-primary" type="submit" value="Add Hour" />
    }
</div>


