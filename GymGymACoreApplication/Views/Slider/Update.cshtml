@using Entities.Concrete;
@model Slider;
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="p-2">
    <br />
    <br />

    <h3 style="text-align:center;">Update Slider</h3>
    <br />

    @using (Html.BeginForm("Update", "Slider", FormMethod.Post, new { @class = "form-group" }))
    {
        @Html.TextBoxFor(s=>s.SliderId,new { @class = "form-control",@type="hidden"})
        @Html.Label("Slider Title")
        @Html.TextBoxFor(s=>s.SliderTitle ,new { @class = "form-control" })
        @Html.ValidationMessageFor(s=>s.SliderTitle  ,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Slider Img")
        @Html.TextBoxFor(s=>s.SliderImage,new { @class = "form-control" })
        @Html.ValidationMessageFor(s=>s.SliderImage,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Slider Detail")
        @Html.TextBoxFor(s=>s.SliderDetail,new { @class = "form-control" })
        @Html.ValidationMessageFor(s=>s.SliderDetail,"",new { @class ="text-danger" })
        <br />
       

        <br />
        <input class="button-change form-control btn btn-success" type="submit" value="Update Slider" />
    }
</div>
