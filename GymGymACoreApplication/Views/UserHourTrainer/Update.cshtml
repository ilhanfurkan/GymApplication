@using Entities;
@model UserHourTrainer
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="p-2">
    <h3 style="text-align:center;">Update Appointment</h3>

    @using (Html.BeginForm("Update", "UserHourTrainer", FormMethod.Post, new { @class = "form-group" }))
    {
        @Html.TextBoxFor(userHourTrainer=>userHourTrainer.AppointmentId,new { @class = "form-control",@name="AppointmentId",@value="@Model.AppointmentId",@type="hidden"})
        @Html.Label("Date ")
        @Html.TextBoxFor(userHourTrainer=>userHourTrainer.Date,new { @class = "form-control" })
        @Html.ValidationMessageFor(userHourTrainer=>userHourTrainer.Date,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Hour")
        @Html.TextBoxFor(userHourTrainer=>userHourTrainer.Hours ,new { @class = "form-control" })
        @Html.ValidationMessageFor(userHourTrainer=>userHourTrainer.Hours  ,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Seance ID")
        @Html.TextBoxFor(userHourTrainer=>userHourTrainer.SeanceId ,new { @class = "form-control" })
        @Html.ValidationMessageFor(userHourTrainer=>userHourTrainer.SeanceId  ,"",new { @class ="text-danger" })
        <br />
        @Html.Label("User ID")
        @Html.TextBoxFor(userHourTrainer=>userHourTrainer.UserId ,new { @class = "form-control" })
        @Html.ValidationMessageFor(userHourTrainer=>userHourTrainer.UserId  ,"",new { @class ="text-danger" })
        <br />

        @Html.Label("Case")
        <select class="form-control" name="deleted">
            @if (Model.Deleted)
            {
                <option selected>True</option>
                <option>False</option>
            }
            else
            {
                <option>True</option>
                <option selected>False</option>
            }
        </select>
        <br />

        <input class="button-change form-control btn btn-success" type="submit" value="Update Appointment" />
    }
</div>

