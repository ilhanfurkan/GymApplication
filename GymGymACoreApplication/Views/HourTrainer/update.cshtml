@using Entities.Concrete;
@model HourTrainer;
@{
	ViewData["Title"] = "Update";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-2">
	<h3 style="text-align:center;">Update Seance</h3>
	@using (Html.BeginForm("update", "HourTrainer", FormMethod.Post, new { @class = "form-group" }))
	{
		@Html.TextBoxFor(hourTrainer=>hourTrainer.SeanceId ,new { @class = "form-control",@name="AppointmentId",@value="@Model.AppointmentId",@type="hidden"})
		@Html.Label("Quato")
		@Html.TextBoxFor(hourTrainer=>hourTrainer.Quota,new { @class = "form-control" })
		@Html.ValidationMessageFor(hourTrainer=>hourTrainer.Quota,"",new { @class ="text-danger" })

		<br />
		@Html.Label("Date")
		@Html.TextBoxFor(hourTrainer=>hourTrainer.Date,new { @class = "form-control" })
		@Html.ValidationMessageFor(hourTrainer=>hourTrainer.Date,"",new { @class ="text-danger" })
		
		<br />
		@Html.Label("Hour Id")
		@Html.TextBoxFor(hourTrainer=>hourTrainer.HourId,new { @class = "form-control" })
		@Html.ValidationMessageFor(hourTrainer=>hourTrainer.HourId,"",new { @class ="text-danger" })
		<br />
		@Html.Label("Trainer Id")
		@Html.TextBoxFor(hourTrainer=>hourTrainer.TrainerId,new { @class = "form-control" })
		@Html.ValidationMessageFor(hourTrainer=>hourTrainer.TrainerId,"",new { @class ="text-danger" })
		<br />
		@Html.Label("Active")
		<select class="form-control" name="ActivePassive">
            @if (Model.ActivePassive)
            {
                <option value="True" selected>Active</option>
                <option value="False">Passive</option>
            }
            else
            {
                <option value="True">Active</option>
                <option value="False" selected>Passive</option>
            }
        </select>
        <br />

		@Html.Label("Case")
		   <select class="form-control" name="deleted">
			@if (Model.Deleted)
			{
					  <option value="True" selected>Silindi</option>
					  <option value="False">--</option>
			}
			else
			{
					  <option value="True">Silindi</option>
					  <option value="False" selected>--</option>
			}
		   </select>
		  <br />
		<input class="button-change form-control btn btn-success" type="submit" value="Update Seance" />
	}
</div>