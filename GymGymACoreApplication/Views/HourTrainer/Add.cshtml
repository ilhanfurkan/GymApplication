@using Entities.Concrete;
@model SeanceHourTrainerModel;
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="p-2">
    <h3 style="text-align:center;">Add Seance</h3>

    @using (Html.BeginForm("Add", "HourTrainer", FormMethod.Post, new { @class = "form-group" }))
    {


        <label>Quato</label>
        <input class="form-control" type="number" name="Quato" value="@Model.seanceModel.Quota" />
        <br />

        <label>Date</label>
        <input class="form-control" type="date" name="Date" value="@Model.seanceModel.Date.ToString().Split(" ")[0]" />
        <br />

        <label>Hour</label>
        <select class="form-control" name="hourId">


            @foreach (var item in @Model.hourModel)
            {


                if (item.HourId == @Model.seanceModel.HourId)
                {
                    <option value="@item.HourId" selected>@item.Hours </option>
                }
                else
                {
                    <option value="@item.HourId">@item.Hours</option>
                }
            }
        </select>
        <br />


        <label>Trainer</label>
        <select class="form-control" name="UserId">


            @foreach (var item in @Model.trainerModel)
            {


                if (item.TrainerId == @Model.seanceModel.TrainerId)
                {
                    <option value="@item.TrainerId" selected>@item.TrainerFirstName.ToUpper()  @item.TrainerLastName.ToUpper()</option>
                }
                else
                {
                    <option value="@item.TrainerId">@item.TrainerFirstName.ToUpper()  @item.TrainerLastName.ToUpper()</option>
                }
            }
        </select>
        <br />
        @Html.Label("Active")
        <select class="form-control " name="ActivePassive">
            <option value="True">Active</option>
            <option value="False">Passive</option>

        </select>
        <br />
        @Html.Label("Case")
        <select class="form-control invisible" name="Deleted">
            <option value="False"></option>
            <option value="True">Silindi</option>
        </select>
        <br />



        <input class="form-control btn btn-primary" type="submit" value="Add Appointment" />
    }
</div>
