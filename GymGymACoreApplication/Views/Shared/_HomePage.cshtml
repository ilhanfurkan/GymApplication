@using Entities.Concrete
@{
    var list = (List<Menu>)ViewBag.menu;
    var mdropdown = "";
}





<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Gym ">
    <meta name="keywords" content="Gym, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>GYMGYM-A | GYM</title>
    <link rel="shortcut icon" href="~/template/assets/images/gglogo.png" />
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Muli:300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Oswald:300,400,500,600,700&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="~/gymlife/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/gymlife/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/gymlife/css/flaticon.css" type="text/css">
    <link rel="stylesheet" href="~/gymlife/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/gymlife/css/barfiller.css" type="text/css">
    <link rel="stylesheet" href="~/gymlife/css/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="~/gymlife/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/gymlife/css/style.css" type="text/css">
</head>

<body>
    @*    @{
    var menuList = (List<Menu>)ViewData["menu"];

    }*@
    <!-- Page Preloder -->

    <div id="preloder">
        <div class="loader"></div>
    </div>


    <!-- Offcanvas Menu Section Begin -->
    <div class="offcanvas-menu-overlay"></div>
    <div class="offcanvas-menu-wrapper">
        @*<div class="canvas-close">
            <i class="fa fa-close"></i>
        </div>
        <div class="canvas-search search-switch">
            <i class="fa fa-search"></i>
        </div>*@
        @*mobile menu*@
        <nav class="canvas-menu mobile-menu">
            @{
                void subMenuAddMobil(List<Menu> submenu)
                {


                                                        <ul>
                                                            @foreach (var item in submenu)
                        {
                            if (item.Children.Count > 0)
                            {
                                                                    <li>
                                                                        <a href="./index.html">@item.MenuName</a>
                                                                        @{
                                        subMenuAddMobil(item.Children.ToList());
                                                                        }
                                                                    </li>
                            }
                            else
                            {
                                                                    <li><a href="#" class="nav-link">@item.MenuName</a></li>
                            }
                        }
                                                        </ul>
                }
            }

            <ul class="dropdown">

                @foreach (var item in list)
                {

                    if (item.ParentId == null)
                    {
                        if (item.Children.Count > 0)
                        {
                            <li>
                                <a href="./about-us.html">@item.MenuName</a>
                                @{
                                    subMenuAddMobil(item.Children.ToList());
                                }
                            </li>


                        }
                        else
                        {
                            <li><a href="#home-section" class="nav-link" style="padding:0px 20px;">@item.MenuName</a></li>
                        }

                    }

                }
            </ul>
        </nav>

        <div id="mobile-menu-wrap"></div>   
        <div class="canvas-social">
            <a href="#"><i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-youtube-play"></i></a>
            <a href="#"><i class="fa fa-instagram"></i></a>
        </div>
    </div>
    <!-- Offcanvas Menu Section End -->
    <!-- Header Section Begin -->
    <header class="header-section">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3">
                    <div class="logo">
                        <a style="height:120px; width:190px; margin-top:-11px;" href="/HomePage">
                            <img src="/gymlife/img/logo.png" alt="">
                        </a>
                    </div>
                </div>


                <div class="col-lg-6">
                    <nav class="nav-menu">
                        <ul>
                            @{
                                void subMenuAdd(List<Menu> submenu)
                                {
                                    
                                                               <ul class="dropdown @mdropdown">
                                               @foreach (var item in submenu)
                                        {
                                            if (item.Children.Count > 0)
                                            {
                                                mdropdown = "has-children";
                                                        <li>
                                                        <a href=@item.SeoUrl class="nav-link">@item.MenuName <span style="opacity:0.5; margin-left:50%;">></span></a>
                                                          @{ subMenuAdd(item.Children.ToList());}                                                                                                                             
                                                        </li>                                                
                                            }
                                           
                                            else
                                            {
                                                             <li><a href=@item.SeoUrl class="nav-link">@item.MenuName</a></li>
                                            }
                                        }
                                                    </ul>
                                }
                            }




                            @foreach (var item in list)
                            {

                                if (item.ParentId == null)
                                {
                                    if (item.Children.Count > 0)
                                    {
                                        <li>
                                            <a href=@item.SeoUrl>

                                                @item.MenuName

                                            </a>
                                            @{
                                                subMenuAdd(item.Children.ToList());
                                            }
                                        </li>


                                    }
                                    else
                                    {
                                        <li >
                                            <a href=@item.SeoUrl>

                                                @item.MenuName

                                            </a>
                                        </li>
                                    }

                                }
                               

                            }

                         
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3">
                    <div class="top-option">
                        <div class="to-search search-switch">
                            <i class="fa fa-search"></i>
                        </div>
                        <div class="to-social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-youtube-play"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="canvas-open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
        
    </header>
    <!-- Header End -->
    <!-- Hero Section Begin -->
   
    <!-- Footer Section End -->
    <!-- Search model Begin -->
    @RenderBody()
